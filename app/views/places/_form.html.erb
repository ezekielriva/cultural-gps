    <%= f.label :longitude %><br>
    <%= f.text_field :longitude, "data-geo"=>"lng" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

