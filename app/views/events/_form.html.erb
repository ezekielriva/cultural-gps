<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <p><strong><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</strong></p>

      <p>
      <% @event.errors.full_messages.each do |msg| %>
        <%= msg %> <br>
      <% end %>
      </p>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start_date %><br>
    <%= f.datetime_select :start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :place_id %><br>
    <%= f.select :place_id, decorators.places_data, class: 'form-control input-lg' %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-default' %>
<% end %>
