<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title"><%= @event.name %></h1>
  </div>
  <div class="panel-body">
    <p>
      <%= @event.description %>
    </p>
    <address>
      Where? <strong><%= @event.place.name %></strong> <br>
      <%= @event.place.location %>
    </address>
    <p>
      <strong>Start at:</strong>
      <%= @event.start_date %>
    </p>

    <p>
      <strong>End at:</strong>
      <%= @event.end_date %>
    </p>

    <div id="map-image" data-latitude="<%= @event.place.latitude %>" data-longitude="<%= @event.place.longitude %>">
      <img src="" alt="">
    </div>
  </div>
  <div class="panel-footer">
    <% if isLogged? %>
      <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Back', events_path, class: 'btn btn-default' %>
  </div>
</div>
